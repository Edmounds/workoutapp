/* pages/plan/plan.wxss */
page {
  height: 100vh;
}

.scrollarea {
  width: 100vw;
  height: 100vh;
  overflow-y: auto;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

/* 训练状态卡片 */
.status-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.status-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.status-row {
  display: flex;
  justify-content: space-between;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx 0;
}

.status-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #eaeaea;
}

.status-item:last-child {
  border-right: none;
}

.status-value {
  display: block;
  color: #0052d9;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-label {
  display: block;
  color: #888888;
  font-size: 24rpx;
}

/* 章节容器样式 */
.section-container {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

/* 计划标签页 */
.plan-tabs {
  display: flex;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 4rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  color: #666666;
  font-size: 28rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab.active {
  background-color: #0052d9;
  color: #ffffff;
  font-weight: bold;
}

/* 计划容器 */
.plan-container {
  margin-bottom: 20rpx;
}

.plan-header {
  margin-bottom: 30rpx;
}

.plan-title {
  display: block;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.plan-subtitle {
  display: block;
  color: #888888;
  font-size: 26rpx;
}

/* 周计划 */
.week-plan {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.day-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.day-name {
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.day-type {
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #0052d9;
}

.day-type.rest {
  background-color: #999999;
}

.day-type.recovery {
  background-color: #67c23a;
}

.day-type.workout {
  background-color: #e6a23c;
}

.day-content {
  padding: 10rpx 0;
}

.day-description {
  display: block;
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.day-detail {
  display: block;
  color: #666666;
  font-size: 24rpx;
}

/* 营养卡片 */
.nutrition-cards {
  display: flex;
  flex-direction: row;
  margin-bottom: 24rpx;
}

.nutrition-card {
  flex: 1;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.nutrition-card:last-child {
  margin-right: 0;
}

.nutrition-header {
  background-color: #0052d9;
  padding: 12rpx 0;
  text-align: center;
}

.nutrition-title {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
}

.nutrition-content {
  padding: 16rpx;
}

.nutrition-item {
  margin-bottom: 12rpx;
}

.item-name {
  display: block;
  color: #333333;
  font-size: 26rpx;
  margin-bottom: 4rpx;
}

.item-value {
  display: block;
  color: #0052d9;
  font-size: 28rpx;
  font-weight: bold;
}

/* 营养提示 */
.nutrition-tips {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
}

.tips-header {
  display: block;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.tip-item {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.tip-dot {
  color: #0052d9;
  font-size: 24rpx;
  margin-right: 8rpx;
  line-height: 1.4;
}

.tip-text {
  color: #666666;
  font-size: 26rpx;
  flex: 1;
  line-height: 1.4;
}

/* AI建议 */
.ai-advice {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
}

.ai-content {
  color: #666666;
  font-size: 26rpx;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
}

.action-button {
  flex: 1;
  margin: 0 10rpx;
  background-color: #0052d9;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: normal;
  border-radius: 12rpx;
  padding: 20rpx 0;
  line-height: 1.2;
}

.action-button.secondary {
  background-color: #f0f0f0;
  color: #666666;
}