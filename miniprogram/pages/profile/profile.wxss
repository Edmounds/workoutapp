/* pages/profile/profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-text {
  color: #999;
  font-size: 32rpx;
}

/* 未登录状态 */
.no-login {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.no-login-text {
  color: #999;
  font-size: 32rpx;
}

/* 个人资料内容 */
.profile-content {
  width: 100%;
}

/* 头部信息卡片 */
.profile-header {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.user-basic {
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level {
  font-size: 28rpx;
  color: #666;
  background-color: #f0f8ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.edit-btn {
  margin-left: 20rpx;
}

/* 信息区域通用样式 */
.info-section,
.stats-section,
.account-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

/* 信息项样式 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 30rpx;
  color: #666;
  width: 160rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  text-align: right;
  font-weight: 500;
}

/* 运动统计网格 */
.stats-grid {
  display: flex;
  justify-content: space-between;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #0052d9;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .profile-header {
    padding: 24rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .username {
    font-size: 32rpx;
  }
  
  .info-section,
  .stats-section,
  .account-section {
    padding: 24rpx;
  }
}

/* 编辑模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 15rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 30rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.form-input:focus {
  border-color: #0052d9;
}

.form-picker {
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 30rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}

.picker-content {
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.modal-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0;
  border-radius: 0;
  border: none;
  font-size: 32rpx;
} 