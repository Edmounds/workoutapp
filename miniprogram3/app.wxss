/**app.wxss**/
/* Material Design 通用样式 */
page {
  --primary-color: #6200EE;
  --primary-dark-color: #3700B3;
  --primary-light-color: #BB86FC;
  --secondary-color: #03DAC6;
  --secondary-dark-color: #018786;
  --background-color: #FFFFFF;
  --surface-color: #FFFFFF;
  --error-color: #B00020;
  --text-primary-color: rgba(0, 0, 0, 0.87);
  --text-secondary-color: rgba(0, 0, 0, 0.6);
  --text-disabled-color: rgba(0, 0, 0, 0.38);
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.5;
  color: var(--text-primary-color);
  background-color: #F5F5F5;
}

.card {
  margin: 16rpx;
  border-radius: 8rpx;
  background-color: var(--surface-color);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1), 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: all 0.3s ease;
}

.card:active {
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15), 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  padding: 16rpx 24rpx 8rpx;
}

.card-content {
  padding: 16rpx 24rpx;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  height: 80rpx;
  padding: 0 24rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  letter-spacing: 0.5rpx;
  transition: background-color 0.3s;
}

.btn-primary {
  background-color: var(--primary-color);
  color: white;
}

.btn-secondary {
  background-color: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-text {
  background-color: transparent;
  color: var(--primary-color);
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.text-field {
  position: relative;
  margin-bottom: 24rpx;
}

.text-field input {
  width: 100%;
  height: 80rpx;
  padding: 20rpx 16rpx 8rpx;
  font-size: 32rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.42);
  transition: border-bottom-color 0.3s;
  box-sizing: border-box;
}

.text-field input:focus {
  border-bottom-color: var(--primary-color);
}

.text-field-label {
  position: absolute;
  top: 24rpx;
  left: 16rpx;
  font-size: 32rpx;
  color: var(--text-secondary-color);
  pointer-events: none;
  transition: all 0.3s;
}

.text-field input:not(:placeholder-shown) + .text-field-label,
.text-field input:focus + .text-field-label {
  transform: translateY(-24rpx) scale(0.75);
  color: var(--primary-color);
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.fade-in {
  animation: fadeIn 0.3s ease;
}

.ripple {
  position: relative;
  overflow: hidden;
}

/* Material Design 底部导航栏样式 */
.bottom-navigation {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  background-color: var(--surface-color);
  box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.bottom-nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
}

.bottom-nav-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.bottom-nav-text {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.bottom-nav-item.active .bottom-nav-text {
  color: var(--primary-color);
}

/* 滚动区域样式 */
.scrollarea {
  flex: 1;
  height: 100vh;
  padding-bottom: 96rpx; /* 为底部导航留出空间 */
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
