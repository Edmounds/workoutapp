/* recordDetail.wxss */
.detail-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #6200EE;
  color: #FFFFFF;
  height: 100rpx;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.detail-content {
  flex: 1;
  padding: 0 30rpx;
}

.detail-card {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 15rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.info-group {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.info-label {
  width: 180rpx;
  color: #666666;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333333;
  font-size: 28rpx;
}

.stats-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.stats-item {
  width: 50%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #6200EE;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666666;
}

.notes-content {
  padding: 10rpx 0;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999999;
  font-size: 28rpx;
}

.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #6200EE;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: #666666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 