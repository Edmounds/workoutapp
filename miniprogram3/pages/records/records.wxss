/* records.wxss */
.records-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #6200EE;
  color: #FFFFFF;
  height: 100rpx;
}

.header-left, .header-right {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 40rpx;
  font-weight: bold;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.records-list {
  flex: 1;
  padding: 0 30rpx;
}

.record-items {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.record-date {
  width: 170rpx;
  color: #666666;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.record-stats {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666666;
}

.record-dot {
  margin: 0 8rpx;
}

.record-arrow {
  display: flex;
  align-items: center;
  color: #BBBBBB;
  padding-left: 20rpx;
}

.arrow-icon {
  font-size: 28rpx;
}

.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999999;
  font-size: 28rpx;
}

.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.7);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #6200EE;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: #666666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 