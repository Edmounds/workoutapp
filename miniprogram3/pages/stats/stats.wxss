/* stats.wxss */
.stats-container {
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.card {
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  background-color: #ffffff;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary-color);
}

.card-date {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.card-filter {
  display: flex;
  font-size: 24rpx;
}

.card-filter text {
  padding: 6rpx 16rpx;
  margin-left: 8rpx;
  color: var(--text-secondary-color);
  border-radius: 24rpx;
}

.card-filter text.active {
  background-color: var(--primary-color);
  color: white;
}

.card-more {
  font-size: 24rpx;
  color: var(--primary-color);
}

/* 健康概览卡片 */
.health-card {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark-color));
  color: white;
}

.health-card .card-title,
.health-card .card-date {
  color: rgba(255, 255, 255, 0.9);
}

.health-data {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
}

.health-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.health-item-value {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.health-item-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 图表卡片 */
.chart-container {
  height: 400rpx;
  width: 100%;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 运动记录列表 */
.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-secondary-color);
}

.record-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.record-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.record-item:last-child {
  border-bottom: none;
}

.record-date {
  width: 160rpx;
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.record-info {
  flex: 1;
}

.record-type {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.record-stats {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.record-dot {
  margin: 0 8rpx;
}

.record-arrow {
  display: flex;
  align-items: center;
}

.arrow-icon {
  color: #ccc;
  font-size: 28rpx;
}

/* 身体指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 24rpx;
}

.metric-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
}

.metric-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.metric-label {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

/* 加载提示 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid rgba(98, 0, 238, 0.2);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 