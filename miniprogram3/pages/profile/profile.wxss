/* profile.wxss */
.profile-container {
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.profile-header {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark-color));
  color: white;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 添加文字头像样式 */
.avatar-text {
  color: white;
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 28rpx;
  opacity: 0.8;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  border-top: 2rpx solid rgba(255, 255, 255, 0.2);
  padding-top: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 卡片通用样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.profile-section {
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary-color);
}

.edit-btn {
  font-size: 28rpx;
  color: var(--primary-color);
}

/* 个人信息列表 */
.info-list {
  margin: 0 -16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

.info-value {
  font-size: 28rpx;
  color: var(--text-primary-color);
  font-weight: 500;
}

/* 成就列表 */
.achievement-list {
  margin-top: 16rpx;
}

.achievement-item {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
  font-size: 40rpx;
}

.achievement-details {
  flex: 1;
}

.achievement-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary-color);
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: var(--text-secondary-color);
  margin-bottom: 8rpx;
}

.achievement-date {
  font-size: 22rpx;
  color: var(--text-disabled-color);
}

/* 设置列表 */
.settings-list {
  margin: 0 -16rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-label {
  font-size: 28rpx;
  color: var(--text-primary-color);
}

.settings-label.logout {
  color: #f44336;
}

.settings-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 版本信息 */
.app-version {
  text-align: center;
  padding: 32rpx 0;
  color: var(--text-disabled-color);
  font-size: 24rpx;
}

/* 编辑个人信息弹窗 */
.edit-profile-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary-color);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-secondary-color);
  line-height: 1;
}

.modal-body {
  padding: 24rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary-color);
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
}

.radio {
  margin-right: 32rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  padding: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.btn-cancel, .btn-save {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: var(--text-secondary-color);
  margin-right: 16rpx;
}

.btn-save {
  background-color: var(--primary-color);
  color: white;
}

/* 加载提示 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid rgba(98, 0, 238, 0.2);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-secondary-color);
  font-size: 28rpx;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 