.chartsview {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	align-content: center;
	justify-content: center;
	position: relative;
}

.charts-loading {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	align-content: center;
	justify-content: center;
	font-size: 14px;
	color: #999999;
	position: absolute;
	z-index: 99;
	top: 0;
	left: 0;
}

.charts-error {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	align-content: center;
	justify-content: center;
	text-align: center;
	font-size: 14px;
	color: #FF6666;
	position: absolute;
	z-index: 99;
	top: 0;
	left: 0;
}
.charts-error view{
	line-height: 20px;
} 